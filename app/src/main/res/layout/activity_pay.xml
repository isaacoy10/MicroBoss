<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:id="@+id/card_home"
    android:background="@drawable/transparent_custom"
    tools:context=".PayActivity">

<!--    android:translationY="1000dp"-->
    <LinearLayout
        android:id="@+id/card_lay_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/microbe_cut_logo_shadowed"
            android:layout_margin="20dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_card_number_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="12sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:theme="@style/Theme.MicroBoss.MeetBoard"
            android:hint="Card Number"
            android:typeface="sans"
            android:textColor="@color/white"
            android:background="@drawable/faded_white_solid"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_card_mm_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/faded_white_solid"
                android:inputType="number"
                android:textSize="12sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="@color/white"
                android:theme="@style/Theme.MicroBoss.MeetBoard"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_marginEnd="10dp"
                android:hint="MM"
                android:typeface="sans"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_card_yy_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/faded_white_solid"
                android:inputType="number"
                android:theme="@style/Theme.MicroBoss.MeetBoard"
                android:textSize="12sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_weight="1.5"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="YY"
                android:typeface="sans"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_card_cvv_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/faded_white_solid"
                android:theme="@style/Theme.MicroBoss.MeetBoard"
                android:inputType="number"
                android:textSize="12sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:layout_weight="2"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="CVV"
                android:typeface="sans"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5">
                <TextView
                    android:id="@+id/fixed_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_green"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="₦ 0.00"
                    android:lines="1"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_card_price_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/theme_solid"
                    android:inputType="number"
                    android:textSize="12sp"
                    android:paddingTop="15dp"
                    android:visibility="gone"
                    android:paddingBottom="15dp"
                    android:theme="@style/Theme.MicroBoss.MeetBoard"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="₦ 0.00"
                    android:typeface="sans"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="10dp">
                <com.microboss.dev.avi.AVLoadingIndicatorView
                    android:id="@+id/beats_loader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/pay_button_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_solid"
                    android:inputType="number"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:elevation="20dp"
                    android:elegantTextHeight="true"
                    android:translationZ="20dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:longClickable="true"
                    android:linksClickable="true"
                    android:textColor="@color/white"
                    android:text="Sponsor"
                    android:typeface="sans"/>
            </FrameLayout>


        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/paystack_badge_unpressed"/>
    </LinearLayout>
</LinearLayout>