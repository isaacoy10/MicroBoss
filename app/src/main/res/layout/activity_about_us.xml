<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp"
    android:layout_marginBottom="80dp"
    android:paddingTop="80dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    android:background="@drawable/theme_solid_opaque"
    tools:context=".AboutUs">
    <TextView
        android:id="@+id/about_us_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/purple_50"/>
    <TextView
        android:id="@+id/about_microbe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:textSize="17sp"
    android:text="MICROBOSS TECHNOLOGIES"
        android:gravity="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/black_solidx"
        android:padding="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/aboutus_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/about_us"
            android:gravity="center"/>
    </ScrollView>

</LinearLayout>