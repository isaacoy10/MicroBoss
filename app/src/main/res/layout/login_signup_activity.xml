<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:background="@drawable/purblack"
    tools:context=".LoginSignupActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="fill_horizontal|fill_vertical|fill"
        android:layout_gravity="fill_horizontal|fill_vertical|fill">

        <VideoView
            android:id="@+id/bg_video"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:gravity="fill_horizontal|fill_vertical|fill"
            android:layout_gravity="fill_horizontal|fill_vertical|fill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_gradient"
        android:orientation="vertical"
        android:gravity="center">

    <LinearLayout
        android:id="@+id/title_motto_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/microbes"
            android:layout_width="180dp"
            android:src="@drawable/microbe_cut_logo"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:typeface="normal"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="One Company... Collaborating to Enhance Communication."
            android:textSize="10sp"
            android:textColor="@color/white"
            android:id="@+id/motto"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RC: 899117"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:id="@+id/rc"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal"
            android:layout_marginBottom="160dp">

            <LinearLayout
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_100"
                    android:textSize="19sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/sub_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_50"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/sign_in_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_solidx"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:translationX="500dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/signin_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Title"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:shadowRadius="4"
                android:shadowDx="0"
                android:shadowDy="-2"
                android:shadowColor="@color/purple_700"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/signin_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Subtitle Subtitle Subtitle Subtitle Subtitle "
                android:textColor="@color/purple_50"
                android:shadowColor="@color/teal_200"
                android:shadowRadius="0.5"
                android:shadowDy="1"
                android:shadowDx="0"
                android:textSize="15sp"
                android:layout_marginBottom="20dp"/>
            <ScrollView
                android:id="@+id/scroll_entries"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="vertical"
                android:fadingEdgeLength="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <FrameLayout
                        android:id="@+id/login_mail_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/email_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:inputType="textEmailAddress"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:hint="E-Mail"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/login_pass_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/pass_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:maxLines="1"
                            android:hint="Password"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/login_btn_layout"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <com.microboss.dev.avi.AVLoadingIndicatorView
                            android:id="@+id/signin_loading"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/log_in_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/purple_200"
                            android:textColor="@color/white"
                            android:shadowDy="-1"
                            android:shadowRadius="1"
                            android:theme="@style/Theme.Experiment.MicroBoss"
                            android:shadowColor="@color/black"
                            android:shadowDx="0"
                            android:src="@drawable/login"
                            android:translationZ="10dp"
                            android:padding="30dp"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/reg_new_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New User?\nRegister"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:shadowColor="@color/purple_500"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/sign_up_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_solidx"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:translationX="-500dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/signup_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/signup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Title"
                android:shadowRadius="4"
                android:shadowDx="0"
                android:shadowDy="-2"
                android:shadowColor="@color/purple_700"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/signup_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Subtitle Subtitle Subtitle Subtitle Subtitle "
                android:shadowColor="@color/teal_200"
                android:shadowRadius="0.5"
                android:layout_marginBottom="20dp"
                android:shadowDy="1"
                android:shadowDx="0"
                android:textColor="@color/purple_50"
                android:textSize="15sp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdgeLength="5dp"
                android:fadingEdge="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <FrameLayout
                        android:id="@+id/signup_title_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_title_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textCapWords"
                            android:hint="Title (Ex. Dr/Mr/Mrs)"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_surname_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_surname_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textCapWords"
                            android:hint="Surname *"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_firstname_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_firstname_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textCapWords"
                            android:hint="First Name *"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_email_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_email_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            android:hint="E-Mail *"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_mobile_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_mobile_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="phone"
                            android:hint="Mobile No *"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_company_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_company_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textCapWords"
                            android:hint="Company Name"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_jobrole_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_jobrole_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textCapWords"
                            android:hint="Job Title"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_sex_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_sex_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textCapWords"
                            android:hint="Gender"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_personal_address_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_personal_address_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textCapWords"
                            android:hint="Address (Ex. 22A, Aliko Crescent, Lekki)"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_city_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_city_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textCapWords"
                            android:hint="City"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_country_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_country_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textCapWords"
                            android:hint="Country *"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_pass_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_pass_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:hint="Password"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/signup_confirmpass_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/signup_confirmpass_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:hint="Confirm Password"
                            android:textColorHint="@color/grey_tranparent"
                            android:textColor="@color/purple_50"
                            android:shadowColor="@color/purple_500"
                            android:shadowDy="1"
                            android:shadowDx="0"
                            android:shadowRadius="1"
                            android:background="@drawable/white_solid"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">
                        <CheckBox
                            android:id="@+id/read_license_box"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right|center"
                            android:gravity="right|center"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|bottom"
                                android:gravity="left|bottom"
                                android:text="By signing up, you agree to our"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/terms_conditions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|top"
                                android:gravity="left|top"
                                android:text="Terms and Conditions"
                                android:textColor="@color/purple_50"
                                android:shadowDx="0"
                                android:shadowDy="1.5"
                                android:shadowRadius="3"
                                android:shadowColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/signup_btn_layout"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center">

                    <com.microboss.dev.avi.AVLoadingIndicatorView
                        android:id="@+id/signup_loading"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/signup_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/purple_200"
                        android:textColor="@color/white"
                        android:translationZ="10dp"
                        android:src="@drawable/user"
                        android:theme="@style/Theme.Experiment.MicroBoss"
                        android:text="Sign me up!"
                        android:padding="30dp"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/login_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Have an account?\nLogin here →"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:shadowColor="@color/purple_500"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/login_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/people_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        android:layout_gravity="bottom|center"
        android:weightSum="3"
        android:background="@drawable/white_gradient"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">

            <Button
                android:id="@+id/agent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:text="AGENT"
                android:shadowRadius="3"
                android:shadowDy="-2"
                android:shadowDx="0"
                android:shadowColor="@color/purple_700"
                android:textColor="@color/purple_50"/>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#939393"
            android:text="|"
            android:shadowColor="#616161"
            android:shadowRadius="1"
            android:shadowDx="0"
            android:shadowDy="-1"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center">

            <Button
                android:id="@+id/individual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:shadowRadius="3"
                android:shadowDy="-2"
                android:shadowDx="0"
                android:shadowColor="@color/purple_700"
                android:textColor="@color/purple_50"
                android:clickable="true"
                android:padding="0dp"
                android:lines="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="  INDIVIDUAL"/>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#939393"
            android:text="|"
            android:shadowColor="#616161"
            android:shadowRadius="1"
            android:shadowDx="0"
            android:shadowDy="-1"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center">

            <Button
                android:id="@+id/corporate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_gravity="center"
                android:clickable="true"
                android:lines="1"
                android:padding="0dp"
                android:gravity="center"
                android:text="CORPORATE  "
                android:shadowRadius="3"
                android:shadowDy="-2"
                android:shadowDx="0"
                android:shadowColor="@color/purple_700"
                android:textColor="@color/purple_50"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>